@{
    ViewData["Title"] = "Dishe Page";
}
@model Dishe
<div class="text-center">
    <h1 class="display-4">Add a new Dish!</h1>
    <p><a asp-action="Index" asp-controller="Home">Home</a> | <a asp-action="Dishes" asp-controller="Home">Add a
            Dish</a></p>
    <div>
        <form asp-action="CreateDishes" asp-controller="Home" method="post">
            <div>
                <label asp-for="Chef">Chef's Name</label>
                <input type="text" asp-for="Chef">
                <span asp-validation-for="Chef"></span>
            </div>
            <div>
                <label asp-for="Name">Name of Dish</label>
                <input type="text" asp-for="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Calories"># of Calories</label>
                <input asp-for="Calories" min="1">
                <span asp-validation-for="Calories"></span>
            </div>
            <div>
                <label asp-for="Tastiness">Tastiness</label>
                <select asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="Tastiness"></span>
            </div>
            <div>
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" cols="30" rows="10"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add Dish</button>
        </form>
    </div>
</div>
